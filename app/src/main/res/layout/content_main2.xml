<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main2"
        tools:context=".Main2Activity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text=""
            android:layout_width="363dp"
            android:layout_height="52dp"
            android:textSize="25sp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="11dp" android:layout_marginStart="11dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text=""
            android:layout_width="361dp"
            android:layout_height="51dp"
            android:id="@+id/textView3"
            android:textSize="25sp"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="绑定Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_bind"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"/>
    <Button
            android:text="解除绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_canclebind"
            android:layout_marginTop="140dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="268dp" android:layout_marginStart="268dp"/>
    <Button
            android:text="获取Service值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_getvule"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="132dp"
            android:layout_marginStart="132dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:text="IntentService"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/button_intent"
            android:layout_marginTop="188dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/radioGroup1"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"/>
    <RadioGroup
            android:layout_width="216dp"
            android:layout_height="33dp"
            android:id="@+id/radioGroup1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="196dp"><!-- horizontal - 横向排列 ，vertical - 竖向排列-->

        <RadioButton
                android:text="选项1"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content" android:id="@+id/radioButton1" android:layout_weight="1"/>
        <RadioButton
                android:text="选项2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        <RadioButton
                android:text="选项3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
    </RadioGroup>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="315dp"
            android:layout_height="0dp"
            android:id="@+id/progressBar2"
            android:progress="33"
            android:max="100"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp"/>
    <SeekBar
            android:layout_width="315dp"
            android:layout_height="13dp"
            android:max="100"
            android:id="@+id/seekBar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="208dp"/>
    <TextView
            android:text="当前进度值:0"
            android:layout_width="191dp"
            android:layout_height="34dp"
            android:id="@+id/textView_seek"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="236dp"/>
    <RatingBar
            android:layout_width="243dp"
            android:layout_height="58dp"
            android:id="@+id/ratingBar" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" android:numStars="0" android:stepSize="0.5" android:rating="0"
            android:isIndicator="false"/>

</android.support.constraint.ConstraintLayout>