<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.314"/>
    <Switch
            android:text="@string/switch_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" android:layout_marginEnd="17dp" android:layout_marginRight="17dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_done"
            app:layout_constraintTop_toTopOf="@+id/button_cancel" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="37dp" android:layout_marginStart="37dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_cancel"/>
    <Button
            android:text="@string/button_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="61dp"
            android:layout_marginRight="61dp" android:layout_marginBottom="132dp"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_marginTop="68dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="@+id/button_cancel" android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" android:singleLine="false"/>

</android.support.constraint.ConstraintLayout>