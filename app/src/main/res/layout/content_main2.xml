<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main2"
        tools:context=".Main2Activity">

    <TextView
            android:text=""
            android:layout_width="363dp"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginBottom="208dp"
            app:layout_constraintBottom_toTopOf="@+id/radioGroup1"/>
    <TextView
            android:text=""
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:id="@+id/textView3"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="367dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" android:layout_marginRight="10dp"/>
    <Button
            android:text="绑定Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_bind" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="52dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="解除绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_canclebind" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="275dp"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="获取Service值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_getvule"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_bind"
            app:layout_constraintStart_toEndOf="@+id/button_bind"/>

    <Button
            android:text="IntentService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_intent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="122dp"
            app:layout_constraintVertical_bias="0.945"/>
    <RadioGroup
            android:layout_width="331dp"
            android:layout_height="37dp"
            android:id="@+id/radioGroup1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginBottom="198dp"><!-- horizontal - 横向排列 ，vertical - 竖向排列-->

        <RadioButton
                android:text="选项1"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content" android:id="@+id/radioButton1" android:layout_weight="1"/>
        <RadioButton
                android:text="选项2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        <RadioButton
                android:text="选项3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>