<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main2"
        tools:context=".Main2Activity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text=""
            android:layout_width="363dp"
            android:layout_height="52dp"
            android:textSize="25sp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="11dp" android:layout_marginStart="11dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text=""
            android:layout_width="364dp"
            android:layout_height="47dp"
            android:id="@+id/textView3"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginStart="10dp"/>
    <Button
            android:text="绑定Service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_bind"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="解除绑定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_canclebind"
            android:layout_marginEnd="36dp" android:layout_marginRight="36dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="获取Service值"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_getvule"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/button_bind"/>

    <Button
            android:text="IntentService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_intent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="137dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp"/>
    <RadioGroup
            android:layout_width="331dp"
            android:layout_height="37dp"
            android:id="@+id/radioGroup1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/button_bind"><!-- horizontal - 横向排列 ，vertical - 竖向排列-->

        <RadioButton
                android:text="选项1"
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content" android:id="@+id/radioButton1" android:layout_weight="1"/>
        <RadioButton
                android:text="选项2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        <RadioButton
                android:text="选项3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButton3" android:layout_weight="1"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>