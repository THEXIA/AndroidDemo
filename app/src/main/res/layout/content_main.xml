<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="25sp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="124dp"/>
    <Button
            android:text="@string/button_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_done"
            android:layout_marginTop="384dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/button_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_cancel"
            android:layout_marginTop="384dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button_done"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="请输入任意字符"
            android:id="@+id/editText"
            android:singleLine="false"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp" android:layout_marginTop="316dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:layout_width="121dp"
            android:layout_height="135dp" app:srcCompat="@drawable/c6219"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="132dp" android:layout_marginStart="132dp" android:layout_marginTop="168dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="@string/info"
            android:layout_width="334dp"
            android:layout_height="35dp"
            android:id="@+id/textView4"
            android:autoLink="web"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <Button
            android:text="GIRD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_gird" app:layout_constraintStart_toEndOf="@+id/button_cancel"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="384dp"/>


</android.support.constraint.ConstraintLayout>